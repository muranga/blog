server {
        listen   443;

        ssl    on;
        ssl_certificate    /etc/letsencrypt/live/blog.mjamo.com/fullchain.pem; (or bundle.crt)
        ssl_certificate_key    /etc/letsencrypt/live/blog.mjamo.com/privkey.pem;
        server_name blog.mjamo.com;
        root /home/blog/www/public;
        location / {
        }
}

server {
    listen      80;
    server_name blog.mjamo.com;
    rewrite     ^   https://$server_name$request_uri? permanent;
}